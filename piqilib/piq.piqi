.variant [
    .name piq

    % negative integers
    .option [ .name int  .type int64 ]
    % non-negative integers
    .option [ .name uint .type uint64 ]

    .option [ .type float ]
    .option [ .type bool ]

    .option [ .type binary ]

    .option [ .type string ]
    .option [ .type word ]
    .option [ .name text .type string ]
    .option [ .name raw-string .type binary ]

    .option [ .type name ]
    .option [ .type named ]

    .option [
        .name type
        .type name

        .ocaml-name "typename"
    ]
    .option [ .type typed ]

    .option [
        .name list
        .type piq-list
    ]
]


.record [
    .name piq-node

    .field [ .type piq ]
    .field [
        % original node location if known

        .type loc
        .optional
    ]
]


.record [
    .name loc

    .field [ .name file .type string ]

    % 1-based line and column
    .field [ .name line    .type int ]
    .field [ .name column  .type int ]
]


.alias [
    .name word
    .type string

    .piq-format.word
]


.alias [
    .name name
    .type word
]


.list [
    .name piq-list
    .type piq-node
]


.record [
    .name named

    .field [ .type name ]
    .field [
        .name value
        .type piq-node
    ]
]


.record [
    .name typed

    .field [
        .name type
        .type name

        .ocaml-name "typename"
    ]
    .field [
        .name value
        .type piq-node
    ]
]


.custom-field ocaml-name
