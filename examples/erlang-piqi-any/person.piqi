% definition of a record type
.record [
    .name person      % record name
    .field [
        .name name    % field name
        .type string  % field type
    ]
    .field [
        .name phone
        .type string
        .repeated     % field can be repeated 0 or more times
    ]

    % field containing untyped JSON or XML
    .field [
        .name custom
        .type piqi-any
        .optional
    ]
]

